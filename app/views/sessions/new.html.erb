<h1 class="text-center mt-4">Login</h1>
<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
   <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <br>
   <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label" %><br/>
      <div class="col-10">
         <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address"  %>
      </div>
   </div>
   <br>
   <div class="form-group row ">
      <%= f.label :password, class: "col-2 col-form-label " %><br/>
      <div class="col-10">
         <%= f.password_field :password, class: "form-control" , placeholder: "Enter a password" %>
      </div>
   </div>
   <br>
   <div class="row justify-content-center text-dark">
     <div class="form-group row">
        <%= f.submit("Login", class: "btn btn-outline-dark ") %>
     </div>
     <%= link_to 'Return to articles listing', root_path %>
     <% end %>
   </div>
</div>
</div
