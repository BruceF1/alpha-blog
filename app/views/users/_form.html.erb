<div class="container">
  <%= render "shared/errors", obj: @user %>
<div class="row justify-content-center">
  <div class="col-10">
   <%= form_with(model: @user, local: true) do |f| %>
   <div class="form-group row">
      <%= f.label :username, class: "col-2 col-form-label" %><br/>
      <div class="col-10">
         <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
      </div>
   </div>
   <br>
   <div class="form-group row">
      <%= f.label :email, class: "col-2 col-form-label" %><br/>
      <div class="col-10">
         <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address"  %>
      </div>
   </div>
   <br>
   <div class="form-group row ">
      <%= f.label :password, class: "col-2 col-form-label " %><br/>
      <div class="col-10">
         <%= f.password_field :password, class: "form-control" , placeholder: "Enter a password" %>
      </div>
   </div>
   <br>
   <div class="row justify-content-center">
     <div class="form-group row">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
     </div>
     <%= link_to 'Return to articles listing', root_path %>
     <% end %>
   </div>
</div>
</div
