<h1 class="text-center mt-4">Create new category</h1>
  <div class="container">
    <%= render "shared/errors", obj: @category %>
  <div class="row justify-content-center">
    <div class="col-10">
     <%= form_with(model: @category, local: true) do |f| %>
     <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label" %><br/>
        <div class="col-10">
           <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
        </div>
     </div>
     <div class="row justify-content-center text-dark my-3">
       <div class="form-group row">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
       </div>
     </div>
     <%= link_to 'Return to articles listing', root_path %>
     <% end %>
  </div>
  </div
